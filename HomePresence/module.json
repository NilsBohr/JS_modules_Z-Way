{
    "moduleName": "HomePresence",
    "category": "automation_basic",
    "dependencies":  ["Cron" , "BaseModule"],
    "icon": "icon.png",
    "maturity": "beta",
    "version": "1.0",
    "singleton": true,
    "defaults": {
        "description": "__m_descr__",
        "title": "__m_title__"
    },
    "options": {
        "fields": {
            "interval": {
                "type": "integer",
                "helper": "__interval_helper__",
                "label": "__interval_label__"
            },
            "netcat_port": {
                "type": "integer",
                "helper": "__netcat_port_helper__",
                "label": "__netcat_port_label__"
            },
            "motion_timeout" : {
                "helper": "__motion_timeout_helper__",
                "label": "__motion_timeout_label__"
            },
            "debug_logging": {
                "type": "checkbox",
                "rightLabel": "__debug_logging_label__"
            },
            "network_addresses": {
                "label": "__network_addresses_label__",
                "fields": {
                    "item": {
                        "fields": {
                            "addr": {
                                "helper": "__addr_helper__",
                                "label": "__addr_label__"
                            }
                        }
                    }
                }
            },
            "motion_sensors": {
                "label": "__motion_sensors_label__",
                "fields": {
                    "item": {
                        "fields": {
                            "motion_sensor": {
                                "type": "select",
                                "datasource": "namespaces",
                                "field": "optionLabels",
                                "optionLabels": "namespaces:devices_sensorBinary:deviceName"     
                            }
                        }
                    }
                }
            }
        }
    },
    "schema": {
        "type": "object",
        "properties": {           
            "interval": {
                "type": "number",
                "required": false,
                "default": 1
            },
            "netcat_port": {
                "type": "number",
                "required": false,
                "default": 80
            },
            "motion_timeout" : {
                "type": "number",
                "required": false,
                "default": 1
            },
            "debug_logging": {
                "type": "boolean",
                "default": false
            },
            "network_addresses" : {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "addr": {
                            "type": "string",
                            "required": true
                        }
                    }
                }
            },
            "motion_sensors": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "motion_sensor": {
                            "field": "enum",
                            "datasource": "namespaces",
                            "enum": "namespaces:devices_sensorBinary:deviceId" 
                            }
                        }
                    
                }
            }
        },
        "dependencies": {
            "advanced_config": "show_advanced_config"
        }
    }
}
